extends base.pug 

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title", placeholeder="Video Title", value=video.title, maxlength=80)
        input(placeholeder="Description", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholeder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")