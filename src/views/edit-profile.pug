extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    img(src= "/" + loggedInUser.avartarUrl)
    form(method="POST", enctype="multipart/form-data", width="100", height="100")
        label(for="avartar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Name", name="name", type="text", value=loggedInUser.name, required)
        input(placeholder="Email", name="email", type="text", value=loggedInUser.email, required)
        input(placeholder="Username", name="username", type="text", value=loggedInUser.username, required)
        input(placeholder="Location", name="location", type="text", value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")\
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;