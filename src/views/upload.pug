extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video", name="video", accept="video/*", required)
        input(placeholeder="Title", required, type="text", name="title", maxlength=80)
        input(placeholeder="Description", required, type="text", name="description", minlength=20)
        input(placeholeder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")